@model HeaderVM
<header class="border-bottom lh-1 py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
        </div>
        <div class="col-4 text-center">
            <a class="blog-header-logo text-body-emphasis text-decoration-none" asp-controller="Home"
                asp-action="Index">BLOG</a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            @if (!Model.IsLogin)
            {
                <a class="btn btn-sm btn-outline-secondary me-2" asp-controller="Member" asp-action="Register">註冊</a>
                <a class="btn btn-sm btn-outline-secondary" asp-controller="Member" asp-action="Login">登入</a>
            }
            else
            {
                <form class="d-flex align-items-center h-100 mb-0" asp-controller="Member" asp-action="Logout" method="post">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd"
                            d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                    <span class="mx-2">@Model.Username</span>
                    <a class="btn btn-sm btn-outline-secondary me-2" asp-controller="MemberArticle" asp-action="Index">文章</a>
                    <button type="submit" class="btn btn-sm btn-outline-secondary">登出</button>
                </form>
            }
        </div>
    </div>
</header>