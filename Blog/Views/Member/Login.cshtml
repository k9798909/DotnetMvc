@model LoginVM
@{
    ViewData["Title"] = "登入";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-5 border rounded p-5">
            <form id="loginForm" asp-controller="Member" asp-action="Login" method="post">
                <h1 class="h3 mb-3 fw-normal text-center">登入</h1>
                <div class="form-floating mb-2">
                    <input asp-for="Username" type="text" class="form-control" id="username">
                    <label for="username">使用者名稱</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="password" value="@Model.Password">
                    <label for="password">密碼</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check text-start my-3">
                    <input asp-for="IsRemberMe" class="form-check-input" type="checkbox" value="true"
                        id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        記住我
                    </label>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button class="btn btn-primary w-100 py-2" type="submit">登入</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $().ready(function () {
            $("#loginForm").validate({
                rules: {
                    Username: {
                        required: true,
                    },
                    Password: {
                        required: true,
                        minlength: 5
                    }
                },
                errorClass: "jquery-error",
                errorElement: "span",
                invalidHandler: function () {
                    $(".field-validation-error").text("");
                    $(".validation-summary-errors").html("");
                }
            });
        });
    </script>
}
