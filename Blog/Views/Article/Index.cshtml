@model IEnumerable<ArticleVM>

@{
    ViewData["Title"] = "文章清單";
}

<div class="container">
    @foreach (var dt in Model)
    {
        <a asp-controller="Article" asp-action="Detail" asp-route-id="@dt.Id" class="none-style">
            <div class="row mb-2">
                <div class="col-md-12">
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-primary-emphasis">@dt.CategoryName</strong>
                            <h3 class="mb-0">@dt.Title</h3>
                            <div class="mb-1 text-body-secondary">@dt.AuthorName</div>
                            <div class="mb-1 text-body-secondary">@dt.CreatedTime</div>
                            <pre class="card-text fs-5 mb-auto overflow-hidden multiline-truncate">@dt.Content</pre>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
